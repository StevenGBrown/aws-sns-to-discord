{
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-24
    "lib": ["es2024"],
    "module": "node20",
    "target": "es2024",

    // Planned defaults for TypeScript 6.0
    // https://github.com/microsoft/TypeScript/issues/54500
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "libReplacement": false,
    "noUncheckedSideEffectImports": true,
    "rootDir": ".",
    "strict": true,
    // "types": [], (configured below)

    "outDir": "./dist",
    "sourceMap": true,
    "types": ["node"],
    "verbatimModuleSyntax": true
  }
}
